{
  "name": "mausam-backend",
  "version": "0.0.1",
  "description": "Processing Weather data for indian citizens.",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "format:write": "prettier --config .prettierrc --loglevel silent --write .",
    "format:check": "prettier --config .prettierrc --check .",
    "release": "standard-version",
    "typeorm": "ts-node ./node_modules/.bin/typeorm -f ./src/db/ormconfig.ts",
    "migration:generate": "npm run typeorm -- migration:generate -n",
    "migration:blank": "npm run typeorm -- migration:create -n",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major"
  },
  "dependencies": {
    "apollo-server-express": "^3.6.1",
    "argon2": "^0.28.3",
    "cors": "^2.8.5",
    "event-stream": "^4.0.1",
    "express": "^4.17.2",
    "express-session": "^1.17.2",
    "graphql": "^15.8.0",
    "joi": "^17.5.0",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.3.3",
    "nanoid": "^3.1.30",
    "node-schedule": "^2.1.0",
    "reflect-metadata": "^0.1.13",
    "session-file-store": "^1.5.0",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.41",
    "winston": "^3.3.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/developbharat/mausam-backend.git"
  },
  "keywords": [],
  "author": {
    "name": "Jayant Malik",
    "email": "prod.jayantmalik@gmail.com",
    "url": "https://developbharat.com"
  },
  "license": "GPL-3",
  "bugs": {
    "url": "https://github.com/developbharat/mausam-backend/issues"
  },
  "homepage": "https://github.com/developbharat/mausam-backend#readme",
  "devDependencies": {
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/cors": "^2.8.12",
    "@types/event-stream": "^4.0.0",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/node": "^17.0.6",
    "@types/node-schedule": "^1.3.2",
    "@types/session-file-store": "^1.2.2",
    "@types/supertest": "^2.0.11",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "prettier": "^2.5.1",
    "standard-version": "^9.3.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": ">=14.x"
  }
}
